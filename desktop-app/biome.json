{
  "organizeImports": { "enabled": true },
  "files": {
    "include": ["src/**/*.*", "resources/**/*.*"],
    "ignore": ["out/", "node_modules/", "**/*.min.js"]
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },

  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  }
}
